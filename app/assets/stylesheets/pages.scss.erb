.banner {
  background-color: #555555;
  box-shadow: 0 0 8px 0 rgba(0,0,0,0.5);
  border-radius: 25px;
  width: 85%;
  margin-top: 25px;
  margin-left: auto;
  margin-right: auto;
  min-height: 95px;
  opacity: 0.8;
  border: 3px solid #666666;
}

.nav {
  display: inline-block;
  font-family: 'Cairo', sans-serif;
  font-weight: 300;
  font-size: 26px;
  max-height: 30px;
  margin: 32px 25px 20px 25px;
  a {
    text-decoration: none;
    color: white;
    padding-bottom: 2px;
    &:hover {
      border-bottom: 2px solid white;
    }
  }
}

.header {
  background-color: #0D4F21;
  box-shadow: 0 0 8px 0 rgba(0,0,0,0.5);
  color: white;
  min-height: 120px;
  text-align: center;
  h2 {
    font-family: 'Times New Roman', serif;
    letter-spacing: 8px;
    font-size: 70px;
    margin-top: 15px;
    font-weight: 700;
    margin-left: 75px;
  }
  .nav_wrapper {
    margin-right: 45px;
  }
  .col-sm-4 {
    text-align: left;
  }
  .col-sm-8 {
    text-align: right;
  }
}

.header2 {
  background-color: white;
  height: 5px;
  margin-top: -15px;
  margin-bottom: 10px;
}

.home {
  background: url(<%= asset_data_uri "764-19-garden2.jpg" %>) no-repeat center center;
  background-size: cover;
  width: 100%;
  height: 600px;
  //background: url(../images/764-8-garden2.jpg);
  //background-color: blue;
  text-align: center;
  color: white;
  font-family: 'Cairo', sans-serif;
  h1 {
    font-size: 75px;
    margin-top: 165px;
  }
  h2 {
    font-size: 45px;
  }
}

.divider {
  height: 5px;
  background-color: #0D4F21;
}
.intro {
  text-align: center;
  font-family: 'Cairo', sans-serif;
  font-weight: 300;
  font-size: 20px;
  color: #444444;
  margin-top: 50px;
  margin-bottom: 50px;
  .intro-internal {
    width: 50%;
    margin: auto;
    text-align: left;
  }
  span {
    font-size: 40px;
    font-weight: bold;
    font-family: 'Times New Roman', serif;
    letter-spacing: 2px;
  }
}

.secondary {
  border-top: 10px solid #0D4F21;
  padding-top: 5px;
  border-bottom: 10px solid #0D4F21;
  padding-bottom: 5px;
  color: white;
  font-family: 'Cairo', sans-serif;
  height: 200px;
  .secondary-background {
    background-color: #0D4F21;
    height: 170px;
  }
  h1 {
    font-size: 35px;
    font-weight: 600;
    margin-top: 65px;
  }
}

.photo {
  background: url(<%= asset_data_uri "IMG_5788.JPG" %>) no-repeat center center;
  background-size: cover;
  height: 550px;
}

.tertiary {
  border-top: 10px solid #555555;
  padding-top: 5px;
  border-bottom: 10px solid #555555;
  padding-bottom: 5px;
  color: white;
  font-family: 'Cairo', sans-serif;
  height: 200px;
  text-align: right;
  .tertiary-background {
    background-color: #555555;
    height: 170px;
  }
  h1 {
    font-size: 35px;
    font-weight: 600;
    margin-top: 65px;
  }
}

.links {
  height: 400px;
  text-align: center;
  h2 {
    font-size: 35px;
    font-weight: 600;
    margin-top: 80px;
    font-family: 'Cairo', sans-serif;
    margin-bottom: 80px;
    color: #444444;
  }
  a {
    border: 1px solid #555555;
    border-radius: 5px;
    color: #555555;
    font-family: 'Cairo', sans-serif;
    font-size: 30px;
    font-weight: 300;
    padding: 5px 20px 5px 20px;
    margin-top: 100px;
    &:hover {
      text-decoration: none;
      border: 3px solid #0D4F21;
      color: #0D4F21;
      box-shadow: 0 0 1px 1px rgba(0,0,0,0.5);
    }
  }
  .col-sm-4 {
    text-align: center;;
  }
}

.footer {
  color: white;
  text-align: center;
  border-top: 10px solid #0D4F21;
  padding-top: 5px;
  /*
  .footer2 {
    height: 5px;
    background-color: white;
    margin-top: -150px;
    border: 1px dashed blue;
  */
  .background {
    background-color: #0D4F21;
    padding-top: 20px;
  }
  p {
    font-family: 'Cairo', sans-serif;
    font-size: 15px;
    margin-bottom: 15px;
  }
}

.projects {
  text-align: center;
  color: #444444;
  font-family: 'Cairo', sans-serif;
  margin-top: 20px;
  margin-bottom: 50px;
  h1 {
    font-size: 65px;
    margin-bottom: 25px;
    text-shadow: 5px 5px 5px 5px rgba(0,0,0,0.5);
  }
  p {
    font-size: 20px;
    max-width: 66%;
    margin: auto;
  }
}

.project-link {
  color: white;
  &:nth-child(even) {
    background-color: #aaaaaa;
  }
  &:nth-child(odd) {
    color: #444444;
  }
  min-height: 340px;
  .col-sm-4 {
    text-align: center;
  }
  a:hover {
    text-decoration: none;
    img {
      border: 3px solid black;
      box-shadow: 0 8px 8px 0 rgba(0,0,0,0.5);
    }
  }
  img {
    height: 300px;
    width: 300px;
    margin: 20px 10px 20px 10px;
    border: 3px solid #333333;
    border-radius: 2px;
  }
  h3 {
    font-family: 'Times New Roman', serif;
    font-size: 40px;
    letter-spacing: 3px;
    color: white;
    margin-top: -230px;
  }
  #separator {
    height: 220px;
    width: 5px;
    background-color: #333333;
    margin: auto;
    margin-top: 60px;
    border-radius: 1px;
  }
  p {
    font-family: 'Cairo', sans-serif;
    font-size: 20px;
    margin-top: 45px;
  }
}

.projects-end {
  height: 50px;
}

.contacts {
  text-align: center;
  color: #444444;
  font-family: 'Cairo', sans-serif;
  margin-top: 20px;
  h1 {
    font-size: 65px;
    margin-bottom: 25px;
    text-shadow: 5px 5px 5px 5px rgba(0,0,0,0.5);
  }
}

.project-page {
  text-align: center;
  font-family: 'Cairo', sans-serif;
  h1 {
    font-size: 65px;
    margin-bottom: 25px;
  }
  p {
    font-size: 20px;
  }
}
